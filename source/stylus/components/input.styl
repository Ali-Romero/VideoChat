.input
  display: flex
  align-items: center
  height: 100%
  width 100%
  position relative

  &__field
    width: 100%
    height: 54px
    line-height: normal
    font-size: 14px
    padding: 0
    display: block
    outline: none
    border: 1px solid rgba(253, 91, 199, 0)
    border-radius: 100px
    background: $color-white
    color: $color-black
    font-family: "Gilroy-Regular"
    font-weight: 400
    line-height: 140%
    padding: 0 10px 0 20px
    transition: 0.3s
    +above($breakpoints.sm)
      height: 44px
      font-size: 13px
      padding: 0 10px 0 16px
    +above($breakpoints.md)
      font-size: 13px
      height: 50px
      padding: 0 10px 0 20px
    +above($breakpoints.xxl)
      height: 60px
      font-size: 14px
      padding: 0 10px 0 24px
    &:-webkit-autofill,
    &:-webkit-autofill:hover,
    &:-webkit-autofill:focus,
    &:-webkit-autofill:active
      -webkit-box-shadow: 0 0 0px 1000px white inset
      transition: all 5000s ease-in-out 0s
    &::-ms-input-placeholder
      color: #303437
      font-family: "Gilroy-Light"
      font-weight: 300
    &::-moz-placeholder
      color: #303437
      font-family: "Gilroy-Light"
      font-weight: 300
    &::-webkit-input-placeholder
      color: #303437
      font-family: "Gilroy-Light"
      font-weight: 300
    &::placeholder
      color: #303437
      font-family: "Gilroy-Light"
      font-weight: 300
    &.error
      color: $color-error
      &::placeholder
        color: $color-error
      &::-ms-input-placeholder
        color: $color-error
      &::-moz-placeholder
        color: $color-error
      &::-webkit-input-placeholder
        color: $color-error
      animation: shake 0.6s;
      @keyframes shake {
        10%, 90% {
          transform: translate3d(-1px, 0, 0)
        }
        
        20%, 80% {
          transform: translate3d(2px, 0, 0)
        }

        30%, 50%, 70% {
          transform: translate3d(-4px, 0, 0)
        }

        40%, 60% {
          transform: translate3d(4px, 0, 0)
        }
      }
    &:focus
      border: 1px solid #fd5bc6
    &--textarea
      resize: none
      padding-top: 12px
      border-radius: 14px
      +above($breakpoints.sm)
        padding-top: 11px
      +above($breakpoints.md)
        padding-top: 13px
      +above($breakpoints.xxl)
        border-radius: 40px
        padding-top: 30px
