.connection
  display: flex
  align-items: center
  font-family: "Gilroy-Bold"
  gap: 10px
  +above($breakpoints.sm)
    gap: 12px

  &__link
    display: flex
    align-items: center
    gap: 6px
    cursor pointer
    line-height: normal
    font-size: 12px
    +above($breakpoints.sm)
      font-size: 16px
      gap: 10px
    +above($breakpoints.xxl)
      font-size: 18px
      gap: 12px

  &__icon
    img
      height: auto
      width 8px
      +above($breakpoints.sm)
        width 12px
      +above($breakpoints.xxl)
        width 14px

  &__description
    box-shadow: inset 0 -1px 0 0 rgba(0, 0, 0, 0.4);
    background: linear-gradient(90deg, #ff3fbe 0%, #ecf015 100%);
    display: flex
    align-items: center
    justify-content: center
    text-align: center
    border-radius: 100px
    line-height: normal
    width 125px
    height: 33px
    font-size: 12px
    cursor pointer
    +above($breakpoints.sm)
      font-size: 13px
      width 130px
      height: 34px
    +above($breakpoints.md)
      width 148px
      height: 38px
    +above($breakpoints.xxl)
      font-size: 14px
      width 168px
      height: 43px